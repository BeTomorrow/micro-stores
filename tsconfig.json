{
	"compilerOptions": {
		"strict": true,
		"lib": ["esnext", "dom"],
		"types": ["node"],
		"jsx": "react",
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"downlevelIteration": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"types": ["@types/jest"]
	},
	"include": ["src", "types"]
}
